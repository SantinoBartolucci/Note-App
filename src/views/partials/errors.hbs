{{#if error}}
	<div class='alert alert-dismissible alert-danger mt-4 fade show' role='alert'>
		{{error}}
		<button type='button' class='btn-close' data-bs-dismiss='alert'></button>
	</div>
{{/if}}

{{#each errors}}
	<div class='alert alert-dismissible alert-danger mt-4 fade show' role='alert'>
		{{text}}
		<button type='button' class='btn-close' data-bs-dismiss='alert'></button>
	</div>
{{/each}}