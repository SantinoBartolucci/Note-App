<div class='row'>
	{{#each notes}}
		<div class='col-md-3'>
			<div class='card mt-4'>
				<div class='card-body'>
					<h4 class='card-title d-flex justify-content-between align-items-center'>
						{{title}}
						<a href='/notes/edit/{{id}}'><i class='fas fa-edit'></i></a>
					</h4>
					<hr />
					<p>{{description}}</p>
					<form action='/notes/delete/{{id}}?_method=DELETE' method='POST'>
						<input type='hidden' name='_method' value='DELETE' />
						<button class='btn btn-danger btn-sm w-100 rounded' type='submit'>Delete</button>
					</form>
				</div>
			</div>
		</div>
	{{else}}
		<div class='col col-3 mx-auto'>
			<div class='card mt-4'>
				<div class='card-body'>
					<h1>Hello {{user.name}}!</h1>
					<p class='lead'>There are no notes yet.</p>
					<a href='/notes/add' class='btn btn-success w-100 rounded'>Create One!</a>
				</div>
			</div>
		</div>
	{{/each}}
</div>